#!/bin/sh

LEASES="/tmp/dhcp.leases"

echo "üìã DHCP Lease Table:"
echo ""

if [ ! -f "$LEASES" ]; then
  echo "‚ö†Ô∏è Lease file not found: $LEASES"
  exit 1
fi

if [ ! -s "$LEASES" ]; then
  echo "‚ö†Ô∏è No active DHCP leases found."
  exit 0
fi

awk '{
  printf "‚Ä¢ IP: %s | MAC: %s", $3, $2;
  if ($4) printf " | Hostname: %s", $4;
  print "";
}' "$LEASES"

