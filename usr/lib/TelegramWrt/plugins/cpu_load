#!/bin/sh

echo "üõ†Ô∏è CPU Load & Temperature:"
echo ""

# Carico medio
LOAD=$(uptime | awk -F'load average:' '{print $2}' | sed 's/^/‚Ä¢ Load average:/')

# Temperatura (se disponibile)
TEMP_PATH="/sys/class/thermal/thermal_zone0/temp"
if [ -f "$TEMP_PATH" ]; then
  TEMP=$(cat "$TEMP_PATH")
  TEMP_C=$(expr "$TEMP" / 1000)
  echo "$LOAD"
  echo "‚Ä¢ CPU temperature: ${TEMP_C}¬∞C"
else
  echo "$LOAD"
  echo "‚Ä¢ CPU temperature: Not available"
fi
